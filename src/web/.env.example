# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_SOCKET_URL=ws://localhost:3000/ws
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_COUNT=3

# Authentication Configuration
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.videocoaching.com
NEXT_PUBLIC_AUTH0_SCOPE="openid profile email offline_access"

# Payment Processing
NEXT_PUBLIC_STRIPE_KEY=pk_test_your_publishable_key
NEXT_PUBLIC_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Content Delivery
NEXT_PUBLIC_CDN_URL=https://cdn.videocoaching.com
NEXT_PUBLIC_CDN_FALLBACK_URL=https://backup-cdn.videocoaching.com

# Application Configuration
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAGS={"enableVideoAnnotations":true,"enableVoiceOver":true,"enableLiveChat":true,"enableAnalytics":true}

# Security Configuration
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce
NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600
NEXT_PUBLIC_ALLOWED_FILE_TYPES=["video/mp4","video/webm","video/quicktime"]

# Performance Configuration
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_COMPRESSION_QUALITY=0.8
NEXT_PUBLIC_MAX_CONCURRENT_UPLOADS=3

# Monitoring Configuration
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_ERROR_REPORTING_LEVEL=warning

# Regional Configuration
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_DEFAULT_LOCALE=en-US
NEXT_PUBLIC_SUPPORTED_LOCALES=["en-US","es-ES","fr-FR"]

# Video Processing
NEXT_PUBLIC_MAX_VIDEO_DURATION=3600
NEXT_PUBLIC_VIDEO_BITRATE=2000000
NEXT_PUBLIC_VIDEO_FRAMERATE=30

# Real-time Communication
NEXT_PUBLIC_SOCKET_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_SOCKET_RECONNECT_INTERVAL=1000
NEXT_PUBLIC_SOCKET_TIMEOUT=5000

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000
NEXT_PUBLIC_RATE_LIMIT_BLOCK_DURATION=300000