{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "removeComments": false,
    "noEmit": false,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": [
    "shared/**/*.ts",
    "api-gateway/src/**/*.ts",
    "chat-service/src/**/*.ts",
    "coach-service/src/**/*.ts",
    "payment-service/src/**/*.ts",
    "user-service/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./shared" },
    { "path": "./api-gateway" },
    { "path": "./chat-service" },
    { "path": "./coach-service" },
    { "path": "./payment-service" },
    { "path": "./user-service" }
  ]
}