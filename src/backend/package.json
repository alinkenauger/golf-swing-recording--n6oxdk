{
  "name": "@videocoach/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend services for the Video Coaching Platform",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "shared/*",
    "api-gateway",
    "chat-service",
    "coach-service",
    "payment-service",
    "user-service",
    "video-service"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --stream --concurrency 4",
    "test": "lerna run test --stream --concurrency 2",
    "lint": "lerna run lint --parallel -- --cache --cache-location node_modules/.cache/eslint",
    "format": "prettier --write \"**/*.{ts,js,json}\" --cache",
    "clean": "lerna clean && rm -rf node_modules",
    "dev": "lerna run dev --parallel --stream",
    "start": "lerna run start --parallel --stream"
  },
