{
  "name": "@videocoach/chat-service",
  "version": "1.0.0",
  "description": "Real-time chat microservice for the Video Coaching Platform supporting direct messaging, group chats, video responses, and notifications",
  "main": "dist/app.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "husky install"
  },
  "author": "Video Coach Platform Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@videocoach/shared": "^1.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.0",
    "mongoose": "^7.3.0",
    "inversify": "^6.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.9.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "ioredis": "^5.3.2",
    "compression": "^1.7.4",
    "inversify-express-utils": "^6.4.3",
    "express-rate-limit": "^6.7.0",
    "socket.io-rate-limiter": "^3.2.0",
    "bull": "^4.10.0",
    "pino": "^8.16.0",
    "pino-http": "^8.5.1",
    "correlation-id": "^3.1.0",
    "@godaddy/terminus": "^4.12.1",
    "opossum": "^7.1.0"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "@types/express": "^4.17.17",
    "@types/socket.io": "^3.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.1",
    "@types/supertest": "^2.0.12",
    "supertest": "^6.3.3",
    "redis-mock": "^0.56.3",
    "ioredis-mock": "^8.9.0"
  }
}