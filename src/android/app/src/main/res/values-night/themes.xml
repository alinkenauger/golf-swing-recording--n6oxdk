<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark theme variant of the Video Coaching Platform theme -->
    <!-- Material Design 3 v1.9.0 -->
    <style name="Theme.VideoCoach" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Design 3 color attributes optimized for dark theme -->
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorPrimaryContainer">@color/color_primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/color_primary_light</item>
        
        <item name="colorSecondary">@color/color_secondary_light</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="colorSecondaryContainer">@color/color_secondary_dark</item>
        <item name="colorOnSecondaryContainer">@color/color_secondary_light</item>
        
        <item name="colorTertiary">@color/color_success_light</item>
        <item name="colorOnTertiary">@color/color_black</item>
        <item name="colorTertiaryContainer">@color/color_success_dark</item>
        <item name="colorOnTertiaryContainer">@color/color_success_light</item>
        
        <item name="colorError">@color/color_error_light</item>
        <item name="colorOnError">@color/color_black</item>
        <item name="colorErrorContainer">@color/color_error_dark</item>
        <item name="colorOnErrorContainer">@color/color_error_light</item>
        
        <!-- Surface and background colors optimized for OLED displays -->
        <item name="android:colorBackground">@color/color_background_dark</item>
        <item name="colorOnBackground">@color/color_text_primary_dark</item>
        <item name="colorSurface">@color/color_surface_dark</item>
        <item name="colorOnSurface">@color/color_text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/color_gray_700</item>
        <item name="colorOnSurfaceVariant">@color/color_text_secondary_dark</item>
        <item name="colorOutline">@color/color_divider_dark</item>
        
        <!-- System bars configuration for dark theme -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Video player specific colors -->
        <item name="videoPlayerControlBackground">@color/color_scrim</item>
        <item name="videoPlayerProgressColor">@color/color_primary_light</item>
        <item name="videoPlayerControlIconTint">@color/color_white</item>
        
        <!-- Annotation tools specific colors -->
        <item name="annotationToolBackground">@color/color_surface_dark</item>
        <item name="annotationToolIconTint">@color/color_text_primary_dark</item>
        <item name="annotationStrokeColor">@color/color_primary_light</item>
        
        <!-- Accessibility overrides for dark theme -->
        <item name="android:textViewStyle">@style/TextAppearance.App.Body1.Dark</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Primary.Dark</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Dark</item>
        
        <!-- Elevation overlay for better depth perception -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/color_surface_dark</item>
    </style>

    <!-- Dark theme specific text appearances -->
    <style name="TextAppearance.App.Body1.Dark" parent="TextAppearance.App.Body1">
        <item name="android:textColor">@color/color_text_primary_dark</item>
        <item name="android:alpha">0.87</item> <!-- WCAG 2.1 contrast compliance -->
    </style>

    <!-- Dark theme specific button style -->
    <style name="Widget.App.Button.Primary.Dark" parent="Widget.App.Button.Primary">
        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="rippleColor">@color/color_primary_dark</item>
    </style>

    <!-- Dark theme specific input style -->
    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.App.TextInputLayout">
        <item name="boxStrokeColor">@color/color_primary_light</item>
        <item name="boxBackgroundColor">@color/color_surface_dark</item>
        <item name="hintTextColor">@color/color_text_secondary_dark</item>
    </style>

    <!-- Video player dark theme overlay -->
    <style name="Theme.VideoCoach.VideoPlayer.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:windowBackground">@color/color_black</item>
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="android:statusBarColor">@color/color_black</item>
        <item name="android:navigationBarColor">@color/color_black</item>
    </style>

    <!-- Annotation tools dark theme overlay -->
    <style name="Theme.VideoCoach.AnnotationTools.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorSurface">@color/color_surface_dark</item>
        <item name="colorOnSurface">@color/color_text_primary_dark</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/color_scrim</item>
    </style>
</resources>